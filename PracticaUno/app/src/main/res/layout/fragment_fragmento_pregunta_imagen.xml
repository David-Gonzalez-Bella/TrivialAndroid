<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentoPreguntaImagen">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/enunciado2"
            android:layout_width="308dp"
            android:layout_height="142dp"
            android:layout_marginTop="56dp"
            android:text="Titulo Pregunta"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/respuesta1"
            android:layout_width="163dp"
            android:layout_height="155dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="56dp"
            android:scaleType="centerCrop"
            android:src="@drawable/maestroyi"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/enunciado2"
            tools:src="@drawable/caitlyn" />

        <ImageButton
            android:id="@+id/respuesta2"
            android:layout_width="163dp"
            android:layout_height="155dp"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="28dp"
            android:scaleType="centerCrop"
            android:src="@drawable/maestroyi"
            android:tint="#00008EFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/respuesta1"
            app:layout_constraintTop_toBottomOf="@+id/enunciado2"
            tools:src="@drawable/caitlyn" />

        <ImageButton
            android:id="@+id/respuesta3"
            android:layout_width="163dp"
            android:layout_height="155dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="230dp"
            android:scaleType="centerCrop"
            android:src="@drawable/maestroyi"
            android:tint="#00008EFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/respuesta1"
            app:layout_constraintVertical_bias="0.0"
            tools:src="@drawable/caitlyn" />

        <ImageButton
            android:id="@+id/respuesta4"
            android:layout_width="163dp"
            android:layout_height="155dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="230dp"
            android:scaleType="centerCrop"
            android:src="@drawable/maestroyi"
            android:tint="#00008EFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/respuesta3"
            app:layout_constraintTop_toBottomOf="@+id/respuesta2"
            app:layout_constraintVertical_bias="0.0"
            tools:src="@drawable/caitlyn" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>